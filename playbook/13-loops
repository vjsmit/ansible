- name: demo on loop
  hosts: all
  tasks:
   - name: print items
     debug:
      msg: "Hello, {{item}}"
     loop:
      - Smit
      - Vijay
      - Lowes
      - India
   - name: print multiple items
     debug:
      msg: "Hello, {{item[0]}} & {{item[1]}}"
     loop:
      - Smit
      - Vj
      - test
      - odi
